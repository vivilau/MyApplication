<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"  android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_get_orde"
    tools:context="com.example.vivid.myapplication.GetOrde"
    android:background="@color/light_grey">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:showDividers="end"
        android:dividerHeight="1dp"
        android:divider="@android:color/black"
        android:background="@drawable/bg_layout"
        android:paddingLeft="8dp">

        <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_alignParentLeft="true"
            android:src="@drawable/ic_mood"
            android:layout_margin="10dp"
            android:layout_gravity="center_vertical" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="接站"
            android:id="@+id/get"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="送站"
            android:id="@+id/send"
            android:layout_gravity="center_vertical" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:dividerHeight="1dp"
        android:divider="@color/black"
        android:background="@drawable/bg_layout"
        android:paddingLeft="8dp">

        <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_train"
            android:layout_margin="10dp"
            android:layout_gravity="center_vertical" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="10dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="K115 北京西-天津"
                android:textSize="@dimen/nav_header_vertical_spacing"
                android:gravity="center_vertical"
                android:textColor="@color/black" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="26dp"
                android:gravity="center_vertical"
                android:text="车次信息" />
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:dividerHeight="1dp"
        android:divider="@android:color/transparent"
        android:background="@drawable/bg_layout"
        android:paddingLeft="8dp">

        <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_clock"
            android:layout_margin="10dp"
            android:layout_gravity="center_vertical" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="10dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:textSize="@dimen/nav_header_vertical_spacing"
                android:gravity="center_vertical"
                android:text="2016-01-12 12:23"
                android:textColor="@color/black" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="26dp"
                android:text="出发时间"
                android:gravity="center_vertical" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:dividerHeight="1dp"
        android:divider="@android:color/transparent"
        android:background="@drawable/bg_layout"
        android:paddingLeft="8dp">

        <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_card"
            android:layout_margin="10dp"
            android:layout_gravity="center_vertical" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="10dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="张三"
                android:textSize="@dimen/nav_header_vertical_spacing"
                android:gravity="center_vertical"
                android:textColor="@color/black" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="26dp"
                android:gravity="center_vertical"
                android:text="乘车人" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:dividerHeight="1dp"
        android:divider="@android:color/transparent"
        android:background="@drawable/bg_layout"
        android:paddingLeft="8dp">

        <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_sit"
            android:layout_margin="10dp"
            android:layout_gravity="center_vertical" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="10dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:textSize="@dimen/nav_header_vertical_spacing"
                android:gravity="center_vertical"
                android:text="07车"
                android:textColor="@color/black" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="26dp"
                android:text="座位"
                android:gravity="center_vertical" />
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:dividerHeight="1dp"
        android:divider="@android:color/transparent"
        android:background="@drawable/bg_layout"
        style="@style/TextAppearance.Design.Hint"
        android:paddingLeft="8dp">
        <TextView
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:text="费用/￥："
            android:textSize="16sp"
            android:gravity="center_vertical"
            android:layout_marginLeft="10dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="50"
            android:textSize="40sp" />

    </LinearLayout>
        </LinearLayout>
    <TextView

        android:id="@+id/tip"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="正在等待接单……"
        android:textColor="@color/colorAccent"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:visibility="invisible" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/button_no"
                android:text="取消"
                android:textSize="16sp"
                android:id="@+id/cancel_order"
                android:visibility="invisible" />


            <android.support.design.widget.FloatingActionButton android:id="@+id/fab"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:layout_gravity="bottom|center"
                android:src="@drawable/ic_done"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
